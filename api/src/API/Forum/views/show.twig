{% extends 'layout.twig' %}

{% block title post.name %}


{% block body %}
<main class="container">
    <a  class="container-link" href="/">Accueil ></a>
    <a class="container-link" href="/forum">Forum ></a>
    <a  class="container-link" href={{path('forum.show', {slug: post.slug, id: post.id})}}>{{post.name}}</a>
    <div class="cards topic-message">
        <header class="cards-head">
            {{post.name}}
        </header>
        {% for message in messages %}
        <div class="messages-content">
            <h2>{{message.created_by}}</h2>
            <div class="user-info">
                <img src="https://via.placeholder.com/55x55" alt="" />
                <p>Admin</p>
            </div>
            <div class="msg-head"><p>Post√© {{message.created_at | ago}}</p><div class="author"><p>Auteur</p></div></div>
            <div class="content">{{message.content | nl2br }}</div>
        </div>
        {% endfor %}
    </div>
     {{ paginate(messages, 'forum.show', {slug: post.slug, id: post.id})}}
</main>
{% endblock %}