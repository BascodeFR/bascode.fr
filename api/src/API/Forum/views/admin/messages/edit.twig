{% extends '@admin/layout.twig' %}

{% block title "Edition du Messages de #{item.created_by} crée #{item.created_at |ago}" %}

{% block body %}
<main class="container">
    <a class="container-link" href="/">Accueil ></a>
    <a class="container-link" href="/forum">Forum ></a>
     <a class="container-link" href="{{ path(routePrefix ~ '.index')}}">Administration ></a>
     <a class="container-link" href="{{ path(routePrefix ~ '.edit', {id: item.id})}}">Edition du Messages de {{item.created_by}} crée {{item.created_at |ago}}</a>
    <div class="cards forum"> 
        <header class="cards-head">
            Edition du Messages de {{item.created_by}} crée le {{item.created_at | ago}}
        </header>
        <form class="topic-edit" action="{{ path(routePrefix ~ '.edit', {id: item.id}) }}" method="post">
            {% include viewPath ~ "/form.twig" %}
            <button type="submit" class="btn"> Editer</button>
        </form>
        

</main>
{% endblock %}