{% extends '@admin/layout.twig' %}

{% block title "Edition de l'actualité #{item.id}" %}

{% block body %}
<main class="container">
    <a class="container-link" href="/">Accueil ></a>
    <a class="container-link" href="{{ path( 'news.index')}}">Actualités ></a>
     <a class="container-link" href="{{ path(routePrefix ~ '.index')}}">Administration ></a>
     <a class="container-link" href="{{ path(routePrefix ~ '.edit', {id: item.id})}}">Edition de l'actualité {{item.name}}</a>
    <div class="cards forum"> 
        <header class="cards-head">
            Edition de l'Actualités {{item.name}}
        </header>
        <form class="topic-edit" action="{{ path(routePrefix ~ '.edit', {id: item.id}) }}" method="post" enctype="multipart/form-data">
            {% include viewPath ~ "/form.twig" %}
            <button class="btn"> Editer</button>
        </form>
    </div>
        

</main>
{% endblock %}