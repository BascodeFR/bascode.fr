{% extends 'layout.twig' %}

{% block title "Actualités"%}

{% block body %}
<main class="container">
    <a class="container-link" href="/">Accueil ></a>
    <a class="container-link" href="/forum">Actualités</a>
    <div class="cards last-actu index"> 
        <header class="cards-head">
            Actualités
        </header>
        <div class="actus">
                {% for new in news %}
                <div class="actu-items">
                {% if new.thumb != null %}
                    <img src="{{new.thumb}}" alt="{{new.name}}" />
                {% endif %}
                    <a href="{{path('news.show', {slug: new.slug, id: new.id})}}" class="actu-name active">{{new.name}}</a>
                    <p>Par {{new.username}}</p>
                    <p>{{new.createdAt | ago}}</p>
                </div>
                {% endfor %}
            </div>  
    {{ paginate(news, 'news.index')}}
    </div>
</main>
{% endblock %}